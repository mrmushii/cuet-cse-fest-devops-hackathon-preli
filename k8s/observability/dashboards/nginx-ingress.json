{
  "dashboard": {
    "title": "NGINX Ingress",
    "tags": ["nginx", "ingress"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Requests per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(nginx_ingress_controller_requests{namespace=\"cuet-app\"}[5m])) by (ingress)",
            "legendFormat": "{{ ingress }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "title": "Request Duration (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(nginx_ingress_controller_request_duration_seconds_bucket{namespace=\"cuet-app\"}[5m])) by (le, ingress))",
            "legendFormat": "{{ ingress }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "title": "Status Code Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (status) (rate(nginx_ingress_controller_requests{namespace=\"cuet-app\"}[5m]))",
            "legendFormat": "{{ status }}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "title": "Response Size (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(nginx_ingress_controller_response_size_bucket{namespace=\"cuet-app\"}[5m])) by (le))",
            "legendFormat": "P95 Response Size"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "title": "Upstream Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(nginx_ingress_controller_ingress_upstream_latency_seconds_bucket{namespace=\"cuet-app\"}[5m])) by (le, ingress))",
            "legendFormat": "{{ ingress }}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ],
    "refresh": "30s"
  }
}
